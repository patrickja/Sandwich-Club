<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- TextView Theme for information display. -->
    <style name="TvTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:padding">@dimen/main_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Theme for information headlines. -->
    <style name="InfoTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/listHeadlines</item>
        <item name="android:textColor">@color/listHeadlinesText</item>
        <item name="android:textSize">@dimen/list_title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
